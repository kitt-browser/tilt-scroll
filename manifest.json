{
    "manifest_version": 2,
    "name": "TiltScroll",
    "description": "TiltScroll uses your phone's accelerometer to let you scroll webpages just by tilting the phone.",
    "version": "1.3.10",
    "author": "Jan Dědeček",
    "icons": {
        "128": "images/icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "bower_components/jquery/jquery.min.js",
                "js/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_action": {
        "default_icon": {
            "300": "images/icon.png"
        }
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    }
}
